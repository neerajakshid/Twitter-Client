<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:theme">@style/TwitterActionBarTheme</item>

    </style>

    <style name="TwitterActionBarTheme"
        parent="@style/Theme.AppCompat">
        <!-- .Light.DarkActionBar -->
        <item name="android:actionBarStyle">@style/TwitterClient_ActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TwitterClient_ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TwitterClient_ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:titleTextStyle">@style/TwitterActionBar_TitleText</item>
        <item name="background">@android:color/holo_blue_light</item>
        <item name="titleTextStyle">@style/TwitterActionBar_TitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="TwitterActionBar_TitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextViewLight" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

  <!--  <style name="PopupTheme" parent="android:Theme.Holo.Light.Dialog">-->
   <style name="PopupTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="PopupActionBarTheme"
        parent="@android:style/Theme.Holo">
        <!-- .Light.DarkActionBar -->
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


</resources>
