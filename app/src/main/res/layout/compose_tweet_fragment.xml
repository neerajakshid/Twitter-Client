<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUserProfile"
        android:minWidth="@dimen/timline_image_50dp"
        android:minHeight="@dimen/timline_image_50dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:id="@+id/tvComposeUsername"
        android:textColor="@color/black"
        android:layout_alignTop="@id/ivUserProfile"
        android:layout_toRightOf="@+id/ivUserProfile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Screen Name"
        android:lines="1"
        android:id="@+id/tvComposeScreenName"
        android:textColor="@color/gray"
        android:layout_alignLeft="@id/tvComposeUsername"
        android:layout_alignStart="@id/tvComposeUsername"
        android:layout_below="@+id/tvComposeUsername"
        android:layout_alignRight="@+id/tvComposeUsername"
        android:layout_alignEnd="@+id/tvComposeUsername" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/compose_tweet_etHint"
        android:textColor="@color/black"
        android:id="@+id/etTweetText"
        android:gravity="bottom|left"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="10"
        android:maxLength="140"
        android:layout_below="@+id/ivUserProfile"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textSize="@dimen/text_size_13sp"
        />

  </RelativeLayout>